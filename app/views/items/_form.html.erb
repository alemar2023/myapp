<%= form_with(model: item) do |form| %>
  <% if item.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
        <% item.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label :price, style: "display: block" %>
    <%= form.text_field :price %>
  </div>

  <div>
    <%= form.label :category, style: "display: block" %>
    <%= form.number_field :category %>
  </div>
  <div class="borderato">
    <p class="form_all">Carica un'immagine da utilizzare per il tuo contenuto/articolo </p>
   img <%= form.file_field :cover %><br>
    <br>
  </div>

  <br><br>
  <div class="borderato">
    <br>
    <p class="form_all">Carica il contenuto/articolo che vuoi mettere in vendita (formati supportati: Powerpoint, Excel, PDF, Word, Immagini e Mp3)</p>
    <%= form.file_field :allegato %>
    <br>
    <br>
  </div>
  <br>
  <div>
    <%= form.submit 'Salva Contenuto' , class: "btn  light-blue darken-3" %>
  </div>
  <br>
<% end %>
